<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".form_personnel">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/routour"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_left" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/create_new_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:text="@string/create_new_"
                        android:textAppearance="@style/contact_inf"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/contact_inf"
                android:layout_width="303dp"
                android:layout_height="63dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Contact Information"
                android:textAppearance="@style/contact_inf"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/uploadP"
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="upload" />

                <ImageView
                    android:id="@+id/imageVU"
                    android:layout_width="100dp"
                    android:layout_height="121dp"
                    android:layout_marginLeft="-100dp"
                    android:gravity="center"
                    android:src="@drawable/uploadphoto" />

                <LinearLayout
                    android:layout_width="241dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="11dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"

                        android:gravity="top"
                        android:lineSpacingExtra="-2sp"
                        android:text="@string/first_name"
                        android:textAppearance="@style/first_name" />

                    <TextView
                        android:id="@+id/some_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="-20dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-3sp"
                        android:text="@string/some_id"
                        android:textAppearance="@style/some_id" />

                    <EditText
                        android:id="@+id/name_user"
                        android:layout_width="218dp"
                        android:layout_height="48dp"
                        android:background="@drawable/rectangle_4"
                        android:hint="name"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:id="@+id/surname"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="top"
                        android:lineSpacingExtra="-2sp"
                        android:text="@string/surname"
                        android:textAppearance="@style/first_name" />

                    <TextView
                        android:id="@+id/some_id2"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="-20dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-3sp"
                        android:text="@string/some_id"
                        android:textAppearance="@style/some_id" />

                    <EditText
                        android:id="@+id/surname_us"
                        android:layout_width="218dp"
                        android:layout_height="48dp"
                        android:background="@drawable/rectangle_4"
                        android:hint="surnom"
                        android:paddingLeft="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="557dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"

                        android:lineSpacingExtra="-2sp"
                        android:text="@string/email_addre"
                        android:textAppearance="@style/first_name" />

                    <TextView
                        android:id="@+id/some_id3"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:text="@string/some_id"
                        android:textAppearance="@style/some_id" />
                </LinearLayout>



                <EditText
                    android:id="@+id/email_us"
                    android:layout_width="328dp"
                    android:layout_height="48dp"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:background="@drawable/rectangle_4"
                    android:hint="email adresse" />

                <LinearLayout
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/phonenb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-2sp"
                        android:text="@string/phone"
                        android:textAppearance="@style/first_name" />
                </LinearLayout>


                <EditText
                    android:id="@+id/number_us"
                    android:layout_width="328dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/rectangle_4"
                    android:paddingLeft="15dp"
                    android:hint="+212 666 666 666"
                    android:inputType="number" />
                <LinearLayout
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/adress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-2sp"
                        android:text="@string/adress"
                        android:textAppearance="@style/first_name" />
                </LinearLayout>


                <EditText
                    android:id="@+id/adress_us"
                    android:layout_width="328dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/rectangle_4"
                    android:paddingLeft="15dp"
                    android:hint="4586 MV Avenue" />

                <LinearLayout
                    android:layout_width="159dp"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-80dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/zip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:lineSpacingExtra="-2sp"
                        android:text="@string/zip"
                        android:textAppearance="@style/first_name" />

                    <EditText
                        android:id="@+id/cin_us"
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="7dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/rectangle_4"
                        android:hint="FF 16000 " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="-80dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:lineSpacingExtra="-2sp"
                        android:text="@string/city"
                        android:textAppearance="@style/first_name" />

                    <EditText
                        android:id="@+id/city_us"
                        android:layout_width="194dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="7dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/rectangle_4"
                        android:hint="Rabat/Hay riad" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="-230dp"

                            >

                            <Button
                                android:id="@+id/moin"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="-55dp"
                                android:background="@drawable/ellipse_7"
                                android:text="-"
                                android:textColor="@color/black"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/plus"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="45dp"
                                android:background="@drawable/ellipse_7"
                                android:text="+"
                                android:textColor="#000000"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/other_detai"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="@string/other_detai"
                                android:textAppearance="@style/other_detai" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/edtext"
                            android:layout_width="328dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="5dp"
                            android:textAllCaps="false"
                            android:background="@drawable/rectangle_4"
                            android:text="Date ns"
                            android:textSize="18sp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/rectangle_1"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="109dp"

                            android:layout_marginTop="36dp"
                            android:layout_marginEnd="109dp"
                            android:background="@drawable/nice_btn"
                            android:drawableRight="@drawable/chevron_right_24"
                            android:text="Next step       "
                            android:textColor="@color/white" />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>